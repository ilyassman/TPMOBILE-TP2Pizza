<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagepizza"
        android:layout_width="106dp"
        android:layout_height="109dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/titrepizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imagepizza"
        tools:layout_editor_absoluteY="10dp" />

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toEndOf="@+id/imagepizza"
        app:layout_constraintTop_toBottomOf="@+id/titrepizza"
        app:srcCompat="@drawable/leadership" />

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="19dp"
        android:layout_height="23dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/imagepizza"
        app:layout_constraintTop_toBottomOf="@+id/icon1"
        app:srcCompat="@drawable/clock" />

    <TextView
        android:id="@+id/duree"
        android:layout_width="31dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="25 min"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/icon2"
        app:layout_constraintTop_toBottomOf="@+id/nbvisit" />

    <TextView
        android:id="@+id/nbvisit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="21dp"
        android:text="2"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/icon1"
        app:layout_constraintTop_toBottomOf="@+id/titrepizza" />

    <ImageView
        android:id="@+id/icon3"
        android:layout_width="33dp"
        android:layout_height="31dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toEndOf="@+id/nbvisit"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/redo" />
</androidx.constraintlayout.widget.ConstraintLayout>